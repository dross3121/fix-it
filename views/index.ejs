<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<title>ticket listing</title>
</head>
<style>
	body        { padding-top:70px; }
</style>
<body>  
	<h1 style="color: crimson;">Ticket Listing</h1>
	<div>
		<% tickets.forEach(function(ticket) { %>
			<div>
				<div>
					<h2>Username: <%= ticket.title %></h2>
					<img  src="data:image/<%= ticket.img.contentType %>;base64, 
					<%= ticket.img.data.toString('base64') %>">
					<div>
						<p>Description: <%= ticket.desc %></p>
						<p>Ticket offer: <%= "$" + ticket.offer + ".00" %></p>
					</div>
				</div>
			</div>
		<% }) %>
	</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>

